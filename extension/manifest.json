{
  "name": "CARTMANGO",
  "description": "This extension shows you the future of online shopping",
  "version": "1.0",
  "author": "Captain Pangyo and Jayjin",

  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*","<all_urls>"],
      "js": ["jquery.js","js_original/content_script.js"]
    }
  ],
  "options_page": "page.html",

  "browser_action": {
    "default_icon": {
      "19" : "img/icon-tilted.png",
      "38" : "img/icon-tilted.png"
    },
    "default_title": "CARTMANGO",
    "default_popup": "popup.html"
  },
  "icons": {
    "16"  : "img/icon-tilted.png",
    "48"  : "img/icon-tilted.png",
    "128" : "img/icon-tilted.png"
  },

  "manifest_version": 2
}
